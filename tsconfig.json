{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./js",
        "lib": [
            "dom",
            "dom.iterable",
            "ES2020"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src"
    ]
}
